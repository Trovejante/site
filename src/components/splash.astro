---
import { Image } from "astro:assets";
import logoImage from "~/assets/logo.png";
import bgImage from "~/assets/purple-thunder.jpg";
import HeroImage from "~/components/hero-image.astro";

const bgWidths = [450, 800, 1200];
const bgSizes = "100vw";

const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<section class="relative h-full bg-black">
  <div class="absolute inset-0 overflow-hidden opacity-50">
    <Image
      class="h-full w-full object-cover"
      src={bgImage}
      widths={bgWidths}
      sizes={bgSizes}
      alt="The ridged surface of the moon"
    />
  </div>
  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
    <HeroImage />
  </div>
  <div class="relative grid h-full place-items-center sm:grid-cols-2">
    <h2 class="flex flex-col items-center gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end">
      <div class="text-gray-100 text-center font-bold text-6xl">
        Core Trovejante
        <br /> &lt;Quinto Afixo&gt;
        <br /> (US) Stormrage
      </div>
    </h2>
    <div
      id="logo"
      class="w-2/3 max-w-3xl self-start sm:w-10/12 sm:self-auto sm:justify-self-start"
    >
      <Image
        class="h-full w-full object-cover"
        src={logoImage}
        widths={widths}
        sizes={sizes}
        loading="eager"
        alt="floating purple dragon logo"
      />
    </div>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  #logo {
    animation: float linear 2.7s infinite alternate;
  }

  @media (prefers-reduced-motion: reduce) {
    #logo {
      @apply animate-none;
    }

    :global(#starfield) {
      @apply hidden;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
</style>
